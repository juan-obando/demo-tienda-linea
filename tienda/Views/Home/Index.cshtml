@{
    ViewData["Title"] = "Home Page";
}

@model tienda.Models.Nodo
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h1>@ViewData["Message"] </h1>
    <h1>@ViewBag.Mensaje </h1>
    <form method="post">
        <div>
            <input type="text" class="form-control" name="tipo" placeholder="Introducir el tipo de producto: (1. Camisa 2. Pantalones 3. Zapatos 4. Sombreros)"/>
            <input type="text" class="form-control" name="codigo" placeholder="Codigo del producto: (del 1 al 9)"/>
        </div>
        <div>
            <button type="submit" class="btn-group">Enviar informacion</button>
        </div>
        <div>
            <p>@ViewBag.Tipo</p>
            <p style="color:orangered">@ViewBag.Codigo</p> 
        </div>
    </form>

</div>
